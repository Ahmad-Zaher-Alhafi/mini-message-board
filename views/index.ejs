<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
  </head>
  <body>
    <% for (let i = 0; i < messages.length; i++) { %>
    <div class="message">
      <div class="user"><%= messages[i].user %></div>
      <div class="text"><%= messages[i].text %></div>
      <div class="added"><%= messages[i].added %></div>
    </div>
    <% } %>

    <form action="/new" method="get">
      <button class="newMessageBtn" type="submit">New message</button>
    </form>
  </body>
</html>
